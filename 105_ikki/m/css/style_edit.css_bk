@charset "UTF-8";
/* CSS Document */

@font-face {
	font-family: myFont;
	src: local("新細明體"), local("儷黑 Pro"), local("PMingLiU"), local("LiHei Pro"), local("Verdana");
}

body {
	background-color:#cccccc;
	margin: 0;
	padding: 0;
	text-align: center;
	font-family: 新細明體, 'PMingLiU', Verdana;
	color: #3e3e3e;
}
#warp {
	background-image:url(../images/edit_bg.png);
	background-repeat:repeat-x;
	width: 100%;     /* 這個一定要設置，某些流覽器不能配合實現居中 */
	height: 997px;
	margin: 0 auto; /* 自動邊距（與寬度一起）會將頁面居中 */
	border: 0;
}
#main {
	margin:0 auto;
	width:320px;
}

#logo {
	height:72px;
	float:left;
	padding-left:0px;	
	padding-top:0px
}

#header {
	width:320px;
	height:17px;
