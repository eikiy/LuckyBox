	padding-left:0px;	
	padding-top:19px;
}

#header .txt {
	width:233px;
	height:17px;
	float:left;
	margin-left:24px;
	font-family:myFont;
	font-size:16px;
	color:#d50000;
	text-align:left;
	font-weight:bold;
}

#header .line {
	width:7px;
	height:15px;
	float:left;
	margin-left:0px;
	margin-top:2px;
	background-color:#d50000;
}
